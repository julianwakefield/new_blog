<%= form_with model: @article do |f| %>
    <div>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
            <% @article.errors.full_messages_for(:title).each do |message| %>
            <div> <%= message %></div>
            <% end %>
    </div>

    <div>
        <%= f.label :body %><br>
        <%= f.text_field :body %>
            <% @article.errors.full_messages_for(:title).each do |message| %>
            <div> <%= message %></div>
            <% end %>
    </div>

    <div>
        <%= f.submit %>
    </div>

    <div>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </div>
    
<% end %>

